{
    "pipeline_parameters": {
        "seed": 2023,
        "do_barcode_demultiplex": false,
        "do_genome_alignment": true,
        "do_gene_quantification": false,
        "do_isoform_identification": false, 
        "comment": [
            "Config below only used when do_isoform_identification: true", 
            "and the novel isoform discovery happens only when bambu_discovery (under 'isoform_parameters') is set to true"
        ],
        "bambu_isoform_identification": false,
        "do_read_realignment": false,
        "do_transcript_quantification": false,
        "threads": 32
    },
    "barcode_parameters": {
        "max_bc_editdistance": 2,
        "comment": "The following barcode parameters are only used when using flexiplex for demultiplexing.",
        "max_flank_editdistance": 8,
        "pattern": {
          "primer": "CTACACGACGCTCTTCCGATCT",
          "BC": "NNNNNNNNNNNNNNNN",
          "UMI": "NNNNNNNNNNNN",
          "polyT": "TTTTTTTTT"
        }
    },
    "isoform_parameters": {
        "generate_raw_isoform": false,
        "max_dist": 10,
        "max_ts_dist": 100,
        "max_splice_match_dist": 10,
        "min_fl_exon_len": 40,
        "max_site_per_splice": 3,
        "min_sup_cnt": 5,
        "min_cnt_pct": 0.001,
        "min_sup_pct": 0.2,
        "bambu_trust_reference": true,
        "bambu_discovery": false,
        "strand_specific": 0,
        "remove_incomp_reads": 4,
        "downsample_ratio": 1
    },
    "alignment_parameters": {
        "use_junctions": true,
        "no_flank": false
    },
    "realign_parameters": {
        "use_annotation": true
    },
    "transcript_counting": {
        "min_tr_coverage": 0.4,
        "min_read_coverage": 0.4
    }
}

